{
  "name": "laserweb-builder",
  "version": "1.0.0",
  "description": "Builds LaserWeb",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "postinstall": "electron-rebuild",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LaserWeb/LaserWeb-binaries.git"
  },
  "author": "The LaserWeb Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LaserWeb/LaserWeb-binaries/issues"
  },
  "homepage": "https://github.com/LaserWeb/LaserWeb-binaries#readme",
  "dependencies": {
    "axios": "^1.7.2",
    "electron-download-tf": "^4.3.4",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^2.21.10",
    "lw.comm-server": "file:../lw.comm-server",
    "node-static": "*",
    "ncp": "^2.0.0",
    "node-hid": "^2.2.0",
    "serialport": "9.x",
    "socket.io": "4.x",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron/rebuild": "^3.6.0",
    "copyfiles": "^1.2.0",
    "electron": "^25.9.8",
    "node-gyp": "^9.4.1"
  },
  "build": {
    "appId": "xyz.laserweb",
    "productName": "MalcolmWeb",
    "asar": true,
    "files": [
      "**/*"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "linux": {
      "category": "Graphics"
    }
  },
  "keywords": [
    "laserweb",
    "cncweb",
    "grbl",
    "smoothieware",
    "tinyg",
    "usb",
    "serial",
    "ethernet",
    "gateway",
    "ESP8266"
  ]
}
